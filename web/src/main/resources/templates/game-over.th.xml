<thlogic>
    <!-- Head -->
    <attr sel="#head" th:replace="~{fragments/head/head :: headFragment}" />
    <!-- Navbar -->
    <attr sel="#navbar" th:replace="~{fragments/navbar/navbar :: navbarFragment}" />
    <!-- Game title -->
    <attr sel="#game-title" th:replace="~{fragments/game-title/game-title :: gameTitleFragment}" />
    <!-- Game over message -->
    <attr sel="#game-over-message" th:replace="~{fragments/game-over-message/game-over-message :: gameOverMessageFragment}" />
    <!-- Result message -->
    <attr sel="#result-message" th:replace="~{fragments/result-message/result-message :: resultMessageFragment}" />
    <!-- Footer -->
    <attr sel="#footer" th:replace="~{fragments/footer/footer :: footerFragment}" />
    <!-- Restart url logic - Restart the game -->
    <attr sel="#restart-button" th:href="${restartUrl}" />
    <attr sel="#restart-button-text" th:text="#{game.playAgain}" />
    <!-- Home url logic - Go to the home -->
    <attr sel="#home-button"
          th:href="${homeUrl}"
          th:text="#{game.goToHome}" />
</thlogic>